{
    "manifest_version": 3,
    "name": "Custom YouTube Playlist",
    "version": "1.0",
    "description": "Create and manage a custom YouTube playlist.",
    "permissions": ["storage"],
    "host_permissions": ["https://www.youtube.com/*"],

    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }